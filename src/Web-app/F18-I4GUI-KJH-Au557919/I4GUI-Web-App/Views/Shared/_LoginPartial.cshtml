@using Microsoft.AspNetCore.Identity
@using I4GUI_Web_App.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline my-2 my-lg-0">
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="btn btn-outline-dark my-2 my-sm-0">Hello @UserManager.GetUserName(User)!</a>
        <button type="submit" class="btn btn-link nav-item">Log out</button>
    </form>
}
else
{
        <a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link"  my-2 my-lg-0">Register</a>
        <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline-dark my-2 my-sm-0">Log in</a>
}
